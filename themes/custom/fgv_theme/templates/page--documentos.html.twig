{#
PÁGINA DOCUMENTOS
#}
<style>
  .view-header {
    display: flex !important;
    justify-content: center !important;
    font-style: italic !important;
    margin-top: 2rem !important;
}
</style>
{{page.navigation}}
<div class="py-5" style="	background-image: url(&quot;{{ base_path ~ directory }}/images/bg1.png&quot;);	background-position: top left;	background-size: cover;	background-repeat: no-repeat;background-color: white;">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-white">Documentos</h1>
        </div>
      </div>
    </div>
  </div>
  <div class="d-block d-sm-nonept-3 py-4 bg-light">
    <div class="container">
    <form class="views-exposed-form" data-drupal-selector="views-exposed-form-documentos-page-1" action="{{ base_path }}documentos" method="get" id="views-exposed-form-documentos-page-1" accept-charset="UTF-8">
    <div class="row mx-0 py-3 px-3 bg-white">
        <div class="col-md-12">
          <div class="row" style="width: 100%; display:flex;justify-content:space-between;">
            <div class="col-md-4 mt-2">
              <div class="form-group"><label style="font-weight: 400;">Pesquisar</label>
                <div class="form-group">
                  <input type="text" data-drupal-selector="edit-keys" id="edit-keys" class="form-control py-3" placeholder="Palavra-chave" name="keys">
                </div>
              </div>
            </div>
              <div class="col-md-4 mt-2">
                <div class="form-group"><label style="font-weight: 400;">Tipo de documento</label>
                  <div class="select-wrapper">
                  <select data-drupal-selector="edit-tid" class="form-select form-control select" id="edit-tid" name="tid" style="height: 3rem;"></select>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-lg-3 d-flex flex-row justify-content-center align-items-center" style="align-items: end !important;">
              <button data-drupal-selector="edit-submit-documentos" class="btn btn-yellow text-dark mt-2 px-5 py-2" type="submit" id="edit-submit-documentos">Buscar</button>
            </div>
          </div>
        </div>
      </div>
      </form>
    </div>
  </div>

<div class="bg-light">
	<div class="container">
		{{page.content}}
	</div>
</div>

{# monta o select #}
<script>
setTimeout(function() {
  $('.select-wrapper > .form-select.form-control').find('option').each(function() {
    if($(this).val() == "All"){
      $('.select-wrapper > .form-select.form-control.select').append('<option value="'+$(this).val()+'" selected="selected">Selecione uma opção</option>')
      return
    }
    $('.select-wrapper > .form-select.form-control.select').append('<option value="'+$(this).val()+'" selected="selected">'+$(this).html()+'</option>')
